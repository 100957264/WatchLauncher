<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_fise_status_bar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="2dp"
    android:paddingLeft="2dp"
    android:paddingRight="2dp"
    android:paddingTop="2dp"
    android:background="@drawable/bg"
    tools:context="android.fise.com.fiseassitant.TesterMic">
    <LinearLayout
        android:id="@+id/fise_linear_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/fise_sim_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="28dp"
            android:src="@drawable/ic_launcher"/>
        <ImageView
            android:id="@+id/fise_wifi_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_launcher"/>
        <ImageView
            android:id="@+id/fise_battery_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:background="@drawable/ic_launcher"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/fise_linear_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_below="@id/fise_linear_1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/fise_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:textSize="24sp"
            android:text="@string/fise_date"/>
        <TextView
        android:id="@+id/fise_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="@string/fise_week"/>
        <TextView
            android:id="@+id/fise_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:textSize="24sp"
            android:text="@string/fise_time"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/fise_dial_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/ic_launcher"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp" />

</RelativeLayout>
