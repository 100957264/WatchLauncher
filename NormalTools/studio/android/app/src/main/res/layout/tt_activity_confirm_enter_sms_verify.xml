<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_bk">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="65dp">

       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/icon_safeguard"/>

        <TextView
            android:id="@+id/confirm_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:layout_marginTop="35dp"
            android:lines="2"
            android:gravity="center"
            android:textSize="@dimen/text_size_level_4"
            android:text="@string/confirm_enter_protection_string"/>

        <Button
            android:id="@+id/sms_confirm_button"
            android:layout_width="wrap_content"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/chat_button"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:text="@string/sms_confirm_pass_code"
            android:textColor="#ffffff"
            android:textSize="17sp" />

    </LinearLayout>
</RelativeLayout>