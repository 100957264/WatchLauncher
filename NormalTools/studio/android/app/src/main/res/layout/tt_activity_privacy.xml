<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
 
    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/my_setting_color"
        android:scrollbars="vertical"
        android:orientation="vertical">
 
          <FrameLayout
            android:id="@+id/top_color"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/top_bar_default_height"
            android:background="@color/default_top_color" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/privacy_message"
                android:textColor="@color/default_zhongjian_black"
                android:textSize="18sp" /> 
                
             <Button
                android:id="@+id/icon_arrow"
                android:layout_width="@dimen/title_button"
                android:layout_height="@dimen/title_button"
                android:layout_gravity="center|left"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/top_bar_default_left"
                android:background="@drawable/icon_arrow_friends_info" />
            
              <TextView
                android:id="@+id/left_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_centerVertical="true"
                android:layout_marginLeft="32dp" 
                android:text="@string/main_me_tab"
                android:textColor="@color/default_bar_black"
                android:textSize="15sp"/>
        </FrameLayout> 
                 
         <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_line_height"
            android:background="@color/default_line_color" />
            
        <RelativeLayout
            android:id="@+id/user_top_ling"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/default_spacing_height"
            android:background="@color/my_setting_color" >
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_line_height"
            android:background="@color/default_line_color" />
        
          <RelativeLayout
            android:id="@+id/add_friends"
            android:layout_width="match_parent"
            android:layout_height="@dimen/relative_layout_height"
            android:background="@color/pickimage_item_bg" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="@string/my_add_friends"
                android:textColor="@color/my_setting_list_color"
                android:textSize="15sp" />

            <CheckBox
                android:id="@+id/forbid_checkbox"
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:button="@drawable/toggle_checkbox_background" />
        </RelativeLayout>
                
          <View
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/default_line_height"
	        android:background="@color/default_line_color" />
	   
          
          
		<RelativeLayout 
            android:layout_width="fill_parent"
            android:layout_height="@dimen/default_spacing_height"
            android:background="@color/default_layout_color"/>
		
		 <View
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/default_line_height"
	        android:background="@color/default_line_color" />
		
		 
		 <RelativeLayout
            android:id="@+id/search_friends"
            android:layout_width="match_parent"
            android:layout_height="@dimen/relative_layout_height"
            android:background="@color/pickimage_item_bg" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="@string/search_friends"
                android:textColor="@color/my_setting_list_color"
                android:textSize="15sp" />

            <CheckBox
                android:id="@+id/search_checkbox"
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:button="@drawable/toggle_checkbox_background" />
        </RelativeLayout>
        
		 
		<View
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/default_line_height"
	        android:background="@color/default_line_color" />
		 	
		 
		
		
		<RelativeLayout 
            android:layout_width="fill_parent"
            android:layout_height="@dimen/default_spacing_height"
            android:background="@color/default_layout_color">
         </RelativeLayout>
         
		<View
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/default_line_height"
	        android:background="@color/default_line_color" />
				
		<RelativeLayout
            android:id="@+id/hei_mingdan"
            android:layout_width="match_parent"
            android:layout_height="@dimen/relative_layout_height"
            android:background="@color/pickimage_item_bg" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="@string/hei_mingdan"
                android:textColor="@color/my_setting_list_color"
                android:textSize="15sp" />
            
         <ImageView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:layout_marginRight="16dp"
	            android:layout_centerVertical="true"
	            android:src="@drawable/tt_default_arrow" />
	        
 
        </RelativeLayout>
        
		
		<View
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/default_line_height"
	        android:background="@color/default_line_color" />
				 
    </LinearLayout>
 

</RelativeLayout>