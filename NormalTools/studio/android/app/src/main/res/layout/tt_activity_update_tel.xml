<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_layout_color"
   >


        <FrameLayout
            android:id="@+id/top_color"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/top_bar_default_height"
            android:background="@color/default_top_color" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/update_tel"
                android:textColor="@color/default_bar_black"
                android:textSize="18sp" />

            <Button
                android:id="@+id/icon_arrow"
                android:layout_width="@dimen/title_button"
                android:layout_height="@dimen/title_button"
                android:layout_centerVertical="true"
                android:layout_gravity="center|left"
                android:layout_marginLeft="@dimen/top_bar_default_left"
                android:background="@drawable/icon_arrow_friends_info" />

            <TextView
                android:id="@+id/left_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center|left"
                android:layout_marginLeft="32dp"
                android:text="@string/me_tel_phone"
                android:textColor="@color/default_bar_black"
                android:textSize="16sp" />
        </FrameLayout>

        <!--
        <View
            android:id="@+id/top_bar_split_line"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/default_line_height"
            android:background="@color/default_line_color" />-->


    <ImageView
        android:id="@+id/tel_phone_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/top_color"
        android:layout_marginTop="25dp"
        android:background="@drawable/pic_change_number" />


    <TextView
        android:id="@+id/tel_phone_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tel_phone_image"
        android:layout_gravity="center"
        android:layout_marginTop="27dp"
        android:text=""
        android:textColor="@color/default_title_color"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/tel_prompt_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tel_phone_text"
        android:layout_gravity="center"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:text="@string/tel_phone_prompt"
        android:textColor="@color/tel_phone_color"
        android:textSize="13sp" />


    <Button
        android:id="@+id/button_change_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tel_prompt_text"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/button_change_number" />
</RelativeLayout>