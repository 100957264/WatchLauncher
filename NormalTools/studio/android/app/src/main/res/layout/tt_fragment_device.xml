<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_bk"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/top_color"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/top_bar_default_height"
        android:background="@color/default_top_color" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/xiaowei_device"
            android:textColor="@color/default_zhongjian_black"
            android:textSize="17sp" />
    </FrameLayout>

    <com.fise.xiaoyu.ui.widget.MyScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fadingEdge="vertical"
        android:scrollbars="none" >

        <!-- #ebebeb -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/default_bk"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:background="@color/default_bk"
                android:orientation="vertical" >

                <com.fise.xiaoyu.ui.widget.IMBaseImageView
                    android:id="@+id/user_portrait"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="13dp"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="13dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/tt_default_user_portrait_corner" />
 

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/user_portrait"
                    android:text="@string/my_device"
                    android:textColor="@color/default_black_color"
                    android:textSize="15sp" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/default_line_height"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:background="@color/default_layout_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@color/default_bk" >

                <RelativeLayout
                    android:id="@+id/telephone_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="24dp" >

                    <ImageView
                        android:id="@+id/telephone"
                        android:layout_width="62dp"
                        android:layout_height="62dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/icon_dingwdh" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/telephone"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/card_text"
                        android:textColor="@color/default_black_color"
                        android:textSize="12sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/electric_vehicle_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="24dp" >

                    <ImageView
                        android:id="@+id/electric_vehicle"
                        android:layout_width="62dp"
                        android:layout_height="62dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/icon_dianpc" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/electric_vehicle"
                        android:layout_gravity="center"
                        android:layout_marginLeft="11dp"
                        android:gravity="center"
                        android:text="@string/electric_vehicle"
                        android:textColor="@color/default_black_color"
                        android:textSize="12sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/children_watch_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true" >

                    <ImageView
                        android:id="@+id/children_watch_vehicle"
                        android:layout_width="62dp"
                        android:layout_height="62dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/icon_ertsb" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/children_watch_vehicle"
                        android:layout_gravity="center"
                        android:layout_marginLeft="6dp"
                        android:gravity="center"
                        android:text="@string/children_watch_vehicle"
                        android:textColor="@color/default_black_color"
                        android:textSize="12sp" />
                </RelativeLayout>
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/default_line_height"
                android:background="@color/default_layout_color" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/default_spacing_height"
                android:background="@color/default_layout_color" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/default_line_height"
                android:background="@color/default_layout_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/default_bk" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="18dp"
                    android:gravity="center"
                    android:text="@string/device_classification"
                    android:textColor="@color/default_black_color"
                    android:textSize="16sp" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/default_line_height"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:background="@color/default_layout_color" />

            <com.fise.xiaoyu.ui.widget.MyGridView
                android:id="@+id/gridview"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:horizontalSpacing="0.0dip"
                android:listSelector="#00000000"
                android:numColumns="3"
                android:scrollbars="none"
                android:stretchMode="columnWidth"
                android:verticalSpacing="0.0dip" />
        </LinearLayout>
    </com.fise.xiaoyu.ui.widget.MyScrollView>

</LinearLayout>