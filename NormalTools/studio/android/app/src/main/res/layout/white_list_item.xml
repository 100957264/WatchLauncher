<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/tt_list_item_bk"
    android:orientation="vertical" >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/white_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="17dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="17dp"
            android:background="@null"
            android:paddingLeft="5dp"
            android:textColor="@color/activity_item_color"
            android:textColorHint="@color/edit_hit_color"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/white_list_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="17dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="17dp"
            android:background="@null"
            android:paddingLeft="5dp"
            android:textColor="@color/activity_item_color"
            android:textColorHint="@color/edit_hit_color"
            android:textSize="15sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_line_height"
        android:background="@color/default_line_color" />

</LinearLayout>