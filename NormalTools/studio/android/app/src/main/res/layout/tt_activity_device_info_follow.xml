<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminateDrawable="@drawable/tt_progressbar"
        android:indeterminateDuration="4000"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <RelativeLayout
            android:id="@+id/top_color"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/top_bar_default_height"
            android:background="@color/default_lan_dev_color" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:text="@string/device_setting"
                android:textColor="@color/default_lan_zi_black"
                android:textSize="18sp" />

            <Button
                android:id="@+id/icon_arrow"
                android:layout_width="@dimen/title_button"
                android:layout_height="@dimen/title_button"
                android:layout_centerVertical="true"
                android:layout_gravity="center|left"
                android:layout_marginLeft="@dimen/top_bar_default_left"
                android:background="@drawable/nav_dev_balck" />

            <TextView
                android:id="@+id/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center|left"
                android:layout_marginLeft="34dp"
                android:text="@string/card_text"
                android:textColor="@color/default_lan_zi_black"
                android:textSize="16sp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/default_line_height"
                android:layout_alignParentBottom="true"
                android:background="@color/default_line_color" />
        </RelativeLayout>



        <com.fise.xiaoyu.ui.widget.MyScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:fadingEdge="vertical"
            android:background="@color/default_layout_color"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/pickimage_item_bg"
                android:orientation="vertical" >

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/default_spacing_height"
                    android:background="@color/default_fragment_bk_color"
                    />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/default_line_height"
                    android:background="@color/default_line_color" />

                <RelativeLayout
                    android:id="@+id/setting_family"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/relative_layout_height"
                    android:background="@color/pickimage_item_bg" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="17dp"
                        android:text="@string/device_authorize"
                        android:textColor="@android:color/black"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16dp"
                        android:src="@drawable/tt_default_arrow" />
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/default_line_height"
                        android:layout_marginLeft="22dp"
                        android:layout_marginRight="22dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/default_line_color" />
                </RelativeLayout>




                <RelativeLayout
                    android:id="@+id/setting_police"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/relative_layout_height"
                    android:background="@color/pickimage_item_bg" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="17dp"
                        android:text="@string/police"
                        android:textColor="@android:color/black"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16dp"
                        android:src="@drawable/tt_default_arrow" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/default_line_height"
                        android:layout_marginLeft="22dp"
                        android:layout_marginRight="22dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/default_line_color" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/working_mode"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/relative_layout_height"
                    android:background="@color/pickimage_item_bg" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="17dp"
                        android:text="@string/working_mode"
                        android:textColor="@android:color/black"
                        android:textSize="15sp" />


                    <TextView
                        android:id="@+id/working_mode_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="30dp"
                        android:textColor="@color/my_setting_list_color"
                        android:textSize="15sp" />


                    <ImageView
                        android:id="@+id/working_mode_default_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="14dp"
                        android:background="@drawable/tt_default_arrow"/>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/default_line_height"
                        android:layout_marginLeft="22dp"
                        android:layout_marginRight="22dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/default_line_color" />
                </RelativeLayout>






                <RelativeLayout
                    android:id="@+id/bell_mode"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/relative_layout_height"
                    android:background="@color/pickimage_item_bg"
                   >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="17dp"
                        android:text="@string/bell_mode"
                        android:textColor="@android:color/black"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/show_bell_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16dp"
                        android:src="@drawable/tt_default_arrow" />

				 <TextView
                        android:id="@+id/show_bell_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="30dp"
                        android:textColor="@color/my_setting_list_color"
                        android:textSize="15sp" />


                    <View
                        android:id="@+id/bell_mode_line"
                        android:layout_width="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_height="@dimen/default_line_height"
                        android:background="@color/default_line_color" />
                </RelativeLayout>




                <LinearLayout
                    android:id="@+id/light_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/relative_layout_height"
                        android:background="@color/pickimage_item_bg" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="17dp"
                            android:text="@string/light_time"
                            android:textColor="@android:color/black"
                            android:textSize="15sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="16dp"
                            android:src="@drawable/tt_default_arrow" />

                        <TextView
                            android:id="@+id/light_time_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="30dp"
                            android:textColor="@color/my_setting_list_color"
                            android:textSize="15sp" />

                    </RelativeLayout>
                    </LinearLayout>

                <RelativeLayout
                    android:id="@+id/silent_listening"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/relative_layout_height"
                    android:background="@color/pickimage_item_bg"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="17dp"
                        android:text="@string/silent_listening"
                        android:textColor="@android:color/black"
                        android:textSize="15sp" />

                    <CheckBox
                        android:id="@+id/silent_listening_Checkbox"
                        android:layout_width="54dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16dp"
                        android:button="@drawable/toggle_checkbox_background"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/silent_listening_default_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="14dp"
                        android:background="@drawable/tt_default_arrow"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/silent_listening_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="4dp"
                        android:layout_toLeftOf="@id/silent_listening_default_arrow"
                        android:textColor="@color/tishi_color"
                        android:textSize="13sp"
                        android:visibility="gone" />
                </RelativeLayout>


                <View
                    android:id="@+id/attend_class_line1"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/default_line_height"
                    android:background="@color/default_line_color"
                    android:visibility="gone"/>

                <View
                    android:id="@+id/attend_class_height"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/default_spacing_height"
                    android:background="@color/default_layout_color"
                    android:visibility="gone"/>

                <View
                    android:id="@+id/attend_class_line"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/default_line_height"
                    android:background="@color/default_line_color"
                    android:visibility="gone"/>

                <RelativeLayout
                    android:id="@+id/attend_class_mode"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/relative_layout_height"
                    android:background="@color/pickimage_item_bg"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="17dp"
                        android:text="@string/attend_class"
                        android:textColor="@android:color/black"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16dp"
                        android:src="@drawable/tt_default_arrow" />

                    <View
                        android:id="@+id/sweet_remind_line"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/default_line_height"
                        android:layout_marginLeft="22dp"
                        android:layout_marginRight="22dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/default_line_color"
                        android:visibility="gone"/>
                </RelativeLayout>




                <RelativeLayout
                    android:id="@+id/sweet_remind"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/relative_layout_height"
                    android:background="@color/pickimage_item_bg"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="17dp"
                        android:text="@string/sweet_remind"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16dp"
                        android:src="@drawable/tt_default_arrow" />
                    <View
                        android:id="@+id/jiange5"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/default_line_height"
                        android:layout_alignParentBottom="true"
                        android:background="@color/default_line_color" />

                </RelativeLayout>




                <View
                    android:id="@+id/line2"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/default_spacing_height"
                    android:background="@color/default_layout_color" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/default_line_height"
                    android:background="@color/default_line_color" />

                <RelativeLayout
                    android:id="@+id/emergency_call"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/relative_layout_height"
                    android:background="@color/pickimage_item_bg" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="17dp"
                        android:text="@string/emergency_call"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16dp"
                        android:src="@drawable/tt_default_arrow" />
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/default_line_height"
                        android:layout_marginLeft="22dp"
                        android:layout_marginRight="22dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/default_line_color" />
                </RelativeLayout>




                <RelativeLayout
                    android:id="@+id/white_list"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/relative_layout_height"
                    android:background="@color/pickimage_item_bg" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="17dp"
                        android:text="@string/white_list"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16dp"
                        android:src="@drawable/tt_default_arrow" />
                    <View
                        android:id="@+id/white_list_short_line"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/default_line_height"
                        android:layout_alignParentBottom="true"
                        android:background="@color/default_line_color" />
                </RelativeLayout>




                <View
                    android:id="@+id/white_list_long_line"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/default_line_height"
                    android:background="@color/default_line_color"
                    android:visibility="gone"/>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/default_spacing_height"
                    android:background="@color/default_layout_color" />


                <RelativeLayout
                    android:id="@+id/speedlimit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/relative_layout_height"
                    android:visibility="gone"
                    android:background="@color/pickimage_item_bg" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="17dp"
                        android:text="@string/speedlimit"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16dp"
                        android:src="@drawable/tt_default_arrow" />
                </RelativeLayout>

                 <View
                    android:id="@+id/speedlimit_line"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/default_line_height"
                     android:visibility="gone"
                    android:background="@color/default_line_color" />

                <View
                    android:id="@+id/step_counter_line2"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/default_line_height"
                    android:background="@color/default_line_color" />

                <RelativeLayout
                    android:id="@+id/step_counter"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/relative_layout_height"
                    android:background="@color/pickimage_item_bg"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="17dp"
                        android:text="@string/step_counter"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />


                    <CheckBox
                        android:id="@+id/step_counter_checkbox"
                        android:layout_width="54dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16dp"
                        android:button="@drawable/toggle_checkbox_background"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/step_counter_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="14dp"
                        android:background="@drawable/tt_default_arrow"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/step_counter_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="4dp"
                        android:layout_toLeftOf="@id/step_counter_arrow"
                        android:textColor="@color/tishi_color"
                        android:textSize="13sp"
                        android:visibility="gone" />
                    <View
                        android:id="@+id/step_counter_line1"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/default_line_height"
                        android:layout_alignParentBottom="true"
                        android:background="@color/default_line_color" />
                </RelativeLayout>




                <View
                    android:id="@+id/step_counter_line"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/default_line_height"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="22dp"
                    android:background="@color/default_line_color"
                    android:visibility="gone"/>

                <RelativeLayout
                    android:id="@+id/firmware_upgrade"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/relative_layout_height"
                    android:background="@color/pickimage_item_bg" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="17dp"
                        android:text="@string/firmware_upgrade"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />


                    <ImageView
                        android:id="@+id/firmware_upgrade_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="14dp"
                        android:background="@drawable/tt_default_arrow" />


                    <TextView
                        android:id="@+id/firmware_version"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="25dp"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/tishi_color"
                        android:layout_centerVertical="true"
                        android:textSize="13sp" />

                    <View
                        android:id="@+id/up_grade_line"
                        android:layout_width="fill_parent"
                        android:layout_alignParentBottom="true"
                        android:layout_height="@dimen/default_line_height"
                        android:background="@color/default_line_color" />
                </RelativeLayout>




                <View
                    android:id="@+id/shown_down_line"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/default_line_height"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="22dp"
                    android:background="@color/default_line_color"
                    android:visibility="gone"/>

                    <RelativeLayout
                        android:id="@+id/shown_down"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/relative_layout_height"
                        android:background="@color/pickimage_item_bg"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="17dp"
                            android:text="@string/shown_down"
                            android:textColor="@android:color/black"
                            android:textSize="16sp" />


                        <ImageView
                            android:id="@+id/shown_down_arrow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="14dp"
                            android:background="@drawable/tt_default_arrow"
                            android:visibility="gone" />
                    </RelativeLayout>
                <View
                    android:id="@+id/shown_down_line1"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/default_line_height"
                    android:visibility="gone"
                    android:background="@color/default_line_color" />

            </LinearLayout>
        </com.fise.xiaoyu.ui.widget.MyScrollView>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/default_line_color" />
    </LinearLayout>

</RelativeLayout>