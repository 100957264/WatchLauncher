<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/default_bk"
              android:orientation="vertical">

    <com.fise.xiaoyu.ui.widget.ToolBarView
        android:id="@+id/toolbar_app_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:toolbarview_center_text="@string/synopsis"
        app:toolbarview_left_background="@drawable/nav_balck">

    </com.fise.xiaoyu.ui.widget.ToolBarView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/app_install"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:background="@drawable/btn_app_install_selector"
            android:focusable="false"
            android:text="安装"
            android:textColor="#57ada0"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/app_icon"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/app_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:maxLines="1"
                android:textSize="14sp"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview_app_info"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/app_descrition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textSize="13sp"/>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>

