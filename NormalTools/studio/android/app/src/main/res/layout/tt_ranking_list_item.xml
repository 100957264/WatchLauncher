<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/my_setting_color"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:background="@color/contact_list_item_bk"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="@dimen/default_line_height"
            android:layout_alignParentTop="true"
            android:layout_gravity="top"
            android:background="@color/default_line_color" />

        <com.fise.xiaoyu.ui.widget.IMBaseImageView
            android:id="@+id/img"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="7dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/img"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/ranking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:ellipsize="end"
                android:maxEms="10"
                android:singleLine="true"
                android:textColor="@color/messgae_uname_dark_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/step_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:listSelector="#00000000"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:maxWidth="200dp"
                android:singleLine="true"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/step_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:listSelector="#00000000"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:maxWidth="200dp"
                android:singleLine="true"
                android:textSize="12sp" />
        </LinearLayout>


        <ImageView
            android:id="@+id/line"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/default_line_height"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:background="@color/default_line_color" />
    </RelativeLayout>
</LinearLayout>