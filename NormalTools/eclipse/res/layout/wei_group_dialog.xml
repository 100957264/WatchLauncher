<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp" >

    <!-- 这里如果使用android:layout_width="5000dip"设置一个极大的值 系统就会 -->

    <Button
        android:id="@+id/button1"
        android:layout_width="480dp"
        android:layout_height="38dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="@drawable/button_xiaowei_quxiao" />

    <RelativeLayout
        android:layout_width="480dp"
        android:layout_height="300dp"
        android:layout_above="@+id/button1"
        android:layout_marginBottom="40dp" >
 
        <ImageView
            android:id="@+id/bg"
            android:layout_width="480dp"
            android:layout_height="300dp"
            android:background="@drawable/bj_xiaowei_qunzu" />

        <ListView
            android:id="@+id/list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:divider="@null"
            android:focusable="true"
            android:focusableInTouchMode="true" >
        </ListView>
        
                <TextView
            android:id="@+id/group_tishi_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" 
            android:layout_centerVertical="true"
            android:text="@string/no_wei_string"
            android:textColor="@color/default_black_color"
            android:textSize="15sp" />
    </RelativeLayout>

</RelativeLayout> 