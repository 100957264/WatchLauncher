<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_fragment_title_bk_color"
    android:orientation="vertical"
    android:id="@+id/act_base_root"
    >

    <FrameLayout
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_default_height"
        android:background="@color/default_top_color" >

        <ImageView
            android:id="@+id/left_btn"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:scaleType="center"
            android:layout_marginLeft="12dp" 
            android:layout_gravity="center_vertical"
            android:background ="@drawable/button_back" />
 
        <TextView
            android:id="@+id/left_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="32dp"
            android:textColor="@color/default_bar_black"
            android:textSize="17sp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            />
 
        <TextView
            android:id="@+id/base_activity_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/default_zhongjian_black"
            android:textSize="@dimen/top_title_size"/>

        <ImageView
            android:id="@+id/right_btn"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="right|center_vertical"
            android:scaleType="center" />
    </FrameLayout>
     
    <View
           	android:layout_width="fill_parent"
           	android:layout_height="1.0dp"
           	android:background="@color/default_line_color"  />

</LinearLayout>