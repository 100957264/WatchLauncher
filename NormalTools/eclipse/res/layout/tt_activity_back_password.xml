<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MGIMInitAct" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/pickimage_item_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:text="@string/cancel_string"
            android:textColor="@color/cancel_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/black"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="@string/check_black_phone"
            android:textColor="@color/activity_item_color"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true" >

                <TextView
                    android:id="@+id/name_text_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/phone_name"
                    android:textColor="@color/activity_item_color"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/phoneName"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@null"
                    android:hint="@string/shuru_phone"
                    android:inputType="text|textPersonName|textEmailAddress"
                    android:maxLines="1"
                    android:paddingLeft="120dp"
                    android:paddingTop="6dp"
                    android:singleLine="true"
                    android:textColor="@color/activity_item_color"
                    android:textColorHint="#cecece"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/name_line"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="40dp"
                    android:background="@color/register_color" />
            </RelativeLayout>

            <Button
                android:id="@+id/next_in_button"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:background="@drawable/chat_button"
                android:gravity="center"
                android:text="@string/next_string"
                android:textColor="#ffffff"
                android:textSize="17sp" />
        </LinearLayout>
    </RelativeLayout>

</merge>